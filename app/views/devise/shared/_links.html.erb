<div class="centro">
<%- if controller_name != 'sessions' %>
  <%= link_to "Accedi", new_session_path(resource_name), class:"access-sign-up" %><br />
<% end %> 


<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Registrati", new_registration_path(resource_name), class:"access-sign-up" %><br />
<% end %>


<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Password dimenticata?", new_password_path(resource_name), class:"access-forgotten" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Non hai ricevuto un'email di conferma?", new_confirmation_path(resource_name), class:"access-forgotten" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>
</div>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= form_for "Login", 
      url: omniauth_authorize_path(resource_name, provider),
      method: :post,
      data:{turbo: "false"} do |f| %>
    <%= button_to "Accedi con Google", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class:"google" %><br />
    <% end %>
  <% end %>
<% end %>
